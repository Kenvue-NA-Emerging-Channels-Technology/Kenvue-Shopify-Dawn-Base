{% comment %}
  Logo

  Accepts:
  - logo_position: {String} Defines the logo position
  - is_header_logo: {Boolean} Defines if it is the header logo (optional)
  - is_logo_inverse: {Boolean} Defines if the colors are inversed (optional)

  Usage:
  {% render 'logo' logo_position: logo_position %}
{% endcomment %}

<div class="{% if is_header_logo %}header__heading-logo-wrapper{% endif %}">
  {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
  {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
  {% if logo_position == 'middle-center' %}
    {% capture sizes %}(min-width: 750px) {{ settings.logo_width }}px, 50vw{% endcapture %}
  {% else %}
    {% capture sizes %}(max-width: {{ settings.logo_width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
  {% endif %}
  {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
  {% assign logo_classes = 'logo' %}
  {% if is_header_logo %}
    {% assign logo_classes = 'header__heading-logo' %}
  {% endif %}
  {% if is_logo_inverse %}
    {% assign logo_classes = logo_classes | append: ' uc-color-inverse' %}
  {% endif %}

  {{ settings.logo | image_url: width: 600 | image_tag:
    class: logo_classes,
    widths: widths,
    height: logo_height,
    width: settings.logo_width,
    alt: logo_alt,
    sizes: sizes,
    preload: true
  }}
</div>